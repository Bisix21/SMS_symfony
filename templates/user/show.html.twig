{% extends 'base_dashboard.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for role in user.roles %}
                    {{ role(role) }}
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>First_name</th>
            <td>{{ user.firstName }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Sur_name</th>
            <td>{{ user.surName }}</td>
        </tr>
        <tr>
            <th>Birthday</th>
            <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Verified</th>
            <td>{% if user.verified %}
                    Verified
                {% else %}
                    Not verified
                {% endif %}</td>
        </tr>
        </tbody>
    </table>
    <div class="col-3 mb-1">
        <a class="btn btn-secondary" href="{{ path('app_user_index') }}">back to list</a>

        <a class="btn btn-warning" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
    </div>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
