{% extends 'base_dashboard.html.twig' %}

{% block title %}Edit StudyClass{% endblock %}

{% block body %}
    <h1>Edit StudyClass</h1>

    {{ include('study_class/_form.html.twig', {'name': 'Update'}) }}

    {{ include('study_class/_delete_form.html.twig') }}
    <h3 class="mt-3">List of users</h3>
    {{ include('study_class/_classmate.html.twig') }}

    <table class="table table-responsive">
        <thead>
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Name</th>
            <th>Surname</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in usersList %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.surName }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_user_show', {'id': user.id}) }}">Show</a>

                    {{ include('study_class/_delete_form.html.twig', {
                        'action': path('app_study_class_remove', {'id': user.id}),
                        'message' : 'Are you sure you want to delete this user from class?',
                        'token': 'remove',
                        'id':user.id
                    }) }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
