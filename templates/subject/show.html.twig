{% extends 'base_dashboard.html.twig' %}

{% block title %}Subject{% endblock %}

{% block body %}
    <h1>Subject</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <th>Class</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        <tr>
            <td>{{ subject.id }}</td>
            <td>
                <ul>
                    {% for class in subject.studyClass %}
                        <li>
                            {{ class.getNumber }}
                        </li>
                    {% endfor %}
                </ul>
            </td>
            <td>{{ subject.name }}</td>
            <td>{{ subject.description }}</td>
        </tr>

        </tbody>
    </table>

    <div class="col-3 mb-1">
        <a class="btn btn-secondary" href="{{ path('app_subject_index') }}">Back to list</a>
        <a class="btn btn-warning" href="{{ path('app_subject_edit', {'id': subject.id}) }}">Edit</a>

    </div>
    {{ include('subject/_delete_form.html.twig') }}
{% endblock %}
