{% extends 'base_dashboard.html.twig' %}

{% block title %}Subject index{% endblock %}

{% block body %}
    <h1>Subject index</h1>
    <a class="btn btn-success" href="{{ path('app_subject_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Classes</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in subjects %}
            <tr>
                <td>{{ subject.id }}</td>
                <td>{{ subject.name }}</td>
                <td>{{ subject.description }}</td>
                <td>
                    <ul>
                        {% for class in subject.studyClass %}
                            <li>
                                {{ class.getNumber }}
                            </li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                   <a class="btn btn-info" href="{{ path('app_subject_show', {'id': subject.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_subject_edit', {'id': subject.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
